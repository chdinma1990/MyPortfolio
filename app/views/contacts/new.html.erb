<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1>Welcome to Cube Deck</h1>
			<h4>Please fill out the contact information below.</h4>
				<div class="well well-lg">
					<%= form_for @contact do |f| %>
						<div class="form-group">
							<%= f.label :first_name %>
							<%= f.text_field :name, placeholder: "first name", class: 'form-control' %>
						</div>

						<div class="form-group">
							<%= f.label :last_name %>
							<%= f.text_field :name, placeholder: "last name", class: 'form-control' %>
						</div>
						
						<div class="form-group">
							<%= f.label :email %>
							<%= f.email_field :email, placeholder: "email address",class: 'form-control'%>
				    </div>
				    
				    <div class="form-group">
							<%= f.label :comments %>
							<%= f.text_area :comments, class: 'form-control' %>
						</div>
						<%= f.submit 'Submit', class: 'btn btn-default' %>
						<% end %>
				</div>
			</div>
		</div>